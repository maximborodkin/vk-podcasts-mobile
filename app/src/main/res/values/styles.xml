<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="actionBarTheme">@style/ActionBarColor</item>
    <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
  </style>
  
  <style name="ActionBarTheme" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
    <item name="backgroundColor">@style/ActionBarColor</item>
  </style>
  
  <style name="ActionBarColor" parent="">
    <item name="colorPrimary">#FFF</item>
  </style>
  
  <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
    <item name="colorPrimary">@color/colorAccent</item>
    <item name="colorSecondary">@color/colorAccent</item>
    <item name="textAllCaps">false</item>
    <item name="android:padding">12dp</item>
    <item name="cornerRadius">12dp</item>
  </style>
  
  <style name="PrimaryButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:textColor">@color/colorAccent</item>
    <item name="textAllCaps">false</item>
    <item name="strokeColor">@color/colorAccent</item>
    <item name="android:padding">12dp</item>
    <item name="cornerRadius">12dp</item>
  </style>

</resources>